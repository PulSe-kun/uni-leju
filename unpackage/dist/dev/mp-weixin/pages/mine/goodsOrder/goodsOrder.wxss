.goodsOrder .header {
  position: fixed;
  left: 0;
  top: 0px;
  width: 100%;
  height: 62rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #354e44;
  color: #fff;
  font-size: 30rpx;
  line-height: 62rpx;
  z-index: 999;
}
.goodsOrder .orange {
  color: orange;
}
.goodsOrder .main {
  padding-top: 100rpx;
}
.goodsOrder .main .orderItems {
  width: 672rpx;
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 24rpx;
  background-color: #fff;
  margin: 30rpx auto;
  font-size: 24rpx;
  color: #3e3e3e;
}
.goodsOrder .main .orderItems .title {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f1ece7;
  padding-bottom: 30rpx;
  font-size: 20rpx;
}
.goodsOrder .main .orderItems .title .wait {
  color: #034c46;
}
.goodsOrder .main .orderItems .center {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #f1ece7;
  padding: 30rpx 0;
}
.goodsOrder .main .orderItems .center image {
  width: 162rpx;
  height: 162rpx;
  flex-shrink: 0;
  background-color: #8f8f94;
}
.goodsOrder .main .orderItems .center .info {
  display: flex;
  flex-wrap: wrap;
  margin-left: 28rpx;
  align-items: center;
  color: #8d8d8d;
}
.goodsOrder .main .orderItems .center .info .p1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #3e3e3e;
}
.goodsOrder .main .orderItems .center .info .p2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
}
.goodsOrder .main .orderItems .center .info .p3 {
  width: 100%;
}
.goodsOrder .main .orderItems .center .info .p4 {
  width: 100%;
  font-weight: bolder;
  color: #333;
  font-size: 28rpx;
  overflow: hidden;
}
.goodsOrder .main .orderItems .center .info .p4 uni-navigator {
  float: right;
  text-decoration: underline;
}
.goodsOrder .main .orderItems .footer .btnBox {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.goodsOrder .main .orderItems .footer .btnBox .btn {
  width: 124rpx;
  height: 50rpx;
  border: 2rpx solid #2d4f43;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: #2d4f43;
  text-align: center;
  line-height: 50rpx;
  margin-left: 40rpx;
}
.goodsOrder .main .orderItems .footer .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goodsOrder .main .orderItems .footer .info .totalPrice {
  font-size: 26rpx;
  line-height: 36rpx;
  text-align: right;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
}

