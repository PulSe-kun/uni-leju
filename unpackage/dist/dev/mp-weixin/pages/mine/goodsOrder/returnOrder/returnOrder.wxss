.returnOrder {
  padding: 0 32rpx;
}
.returnOrder .orderItems {
  width: 672rpx;
  box-sizing: border-box;
  padding: 36rpx 20rpx;
  border-radius: 24rpx;
  background-color: #fff;
  margin: 30rpx auto;
  font-size: 24rpx;
  color: #3e3e3e;
}
.returnOrder .orderItems .title {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f1ece7;
  padding-bottom: 30rpx;
}
.returnOrder .orderItems .title .wait {
  color: #034c46;
}
.returnOrder .orderItems .center {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #f1ece7;
  padding: 30rpx 0;
}
.returnOrder .orderItems .center image {
  width: 162rpx;
  height: 162rpx;
  flex-shrink: 0;
  background-color: #8f8f94;
}
.returnOrder .orderItems .center .info {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  color: #8d8d8d;
  margin-left: 20rpx;
}
.returnOrder .orderItems .center .info .p1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #3e3e3e;
}
.returnOrder .orderItems .center .info .p2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
}
.returnOrder .orderItems .center .info .p3 {
  width: 100%;
}
.returnOrder .orderItems .footer .totalPrice {
  font-size: 26rpx;
  line-height: 36rpx;
  text-align: right;
  margin-top: 14rpx;
}
.returnOrder .info .text {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f1ece7;
}
.returnOrder .info .text .title {
  font-size: 24rpx;
}
.returnOrder .info .write {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f1ece7;
}
.returnOrder .info .write uni-textarea {
  width: 50%;
  font-size: 24rpx;
}
.returnOrder .info .upload {
  background-color: #fff;
}
.returnOrder .info .upload .li {
  font-size: 24rpx;
  padding: 30rpx 0;
}

